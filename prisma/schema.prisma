generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int     @id @default(autoincrement())
  first_name String  @db.VarChar(50)
  last_name  String  @db.VarChar(50)
  email      String  @unique @db.VarChar(75)
  password   String  @db.VarChar(255)
  is_admin   Boolean
  cart       cart[]
}

model cart {
  id         Int          @id @default(autoincrement())
  user_id    Int?
  is_open    Boolean
  users      users?       @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  cart_games cart_games[]
}

model cart_games {
  id      Int    @id @default(autoincrement())
  game_id Int?
  cart_id Int?
  cart    cart?  @relation(fields: [cart_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  games   games? @relation(fields: [game_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model games {
  id             Int          @id @default(autoincrement())
  name           String       @unique @db.VarChar(50)
  developer      String       @db.VarChar(50)
  publisher      String       @db.VarChar(50)
  release_date   DateTime     @db.Date
  price          Int
  genre          String       @db.VarChar(50)
  is_multiplayer Boolean?
  stock          Int
  description    String
  img_url        String
  is_videogame   Boolean
  rec_players    Int?
  cart_games     cart_games[]
}
